<div class="text-white text-center font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-700 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out">
<h1 class="text-white page-title">Transactions</h1>
</div>
<div class="overflow-x-auto">
  <div class="min-w-screen min-h-screen bg-gray-100 flex justify-center bg-gray-100 font-sans overflow-hidden">
    <div class="w-full lg:w-5/6 py-6 px-6">
    <div class="total-amount flex justify-center items-center	px-6 py-6">
    <span>
      <% if @group.icon.attached? %>
      <image src="<%= (url_for(@group.icon)) %>" class="category-icon" >
      <% end %>
    </span>

    <span>Total amount of transactions</span>
    <span class="amount">
      <% @operations = @group.operations %>
      <% @amount = 0 %>
      <% @operations.each do |operation| %>
       <% @amount += operation.amount %>
      <% end %>
      $<%= @amount %>                
    </span>
  </div>
        <div class="categories">
            <% @group.operations.order("created_at DESC").each do |operation| %>
                <div class="category">
                      <span class="category-name"><%= link_to  operation.name, user_group_operation_path(current_user, @group.id, operation) %></span>
                      <span class="category-amount">$<%= operation.amount%></span>
                </div>
              <%end%>
          </div>
        
        <%= link_to  "Create new Transaction", new_user_group_operation_path(current_user, @group.id), class: "create-transaction-button inline-block px-6 py-2.5 bg-green-600 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-green-700 hover:shadow-lg focus:bg-green-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-green-800 active:shadow-lg transition duration-150 ease-in-out mb-2"  %> 
        <%= link_to 'Back', root_path, class: "back-button inline-block px-6 py-2.5 bg-green-600 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-green-700 hover:shadow-lg focus:bg-green-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-green-800 active:shadow-lg transition duration-150 ease-in-out mb-2" %>

    </div>
  </div>
</div>
  
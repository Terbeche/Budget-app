<div class="overflow-x-auto">
  <div class="min-w-screen min-h-screen bg-gray-100 flex pt-20 justify-center bg-gray-100 font-sans overflow-hidden">
    <div class="w-full lg:w-5/6">
    
    <span>Total amount of transactions</span>
    <div class="flex items-center">
      <% @operations = @group.operations %>
      <% @amount = 0 %>
      <% @operations.each do |operation| %>
       <% @amount += operation.amount %>
      <% end %>
      <%= @amount %> $                
    </div>
  
      <div class="bg-white shadow-md rounded my-6">
        <table class="min-w-max w-full table-auto">
          <thead>     
          <tr class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
              <th class="py-3 px-6 text-left">Transaction</th>
              <th class="py-3 px-6 text-left">Amount</th>
          
          </tr> 
          </thead>
          
          <tbody class="text-gray-600 text-sm font-light">
            <% @group.operations.each do |operation| %>
              <tr class="border-b border-gray-200 hover:bg-gray-100">
                <td class="py-3 px-6 text-left whitespace-nowrap">
                  <div class="flex items-center">
                    <span class="text-gray-900 text-xl leading-tight font-medium px-6 py-6"><%= link_to  operation.name, user_group_operation_path(current_user, @group.id, operation), class: "mb-6"  %></span>

                  </div>
                </td>
                <td class="py-3 px-6 text-left">
                  <div class="flex items-center">
                    <span class="bg-green-200 text-green-600 py-1 px-3 rounded-full text-xs"><%= operation.amount%></span>
                  </div>
                </td>
                </tr>
              <%end%>
            </tbody>
          </table>
        </div>
        <%= link_to  "Create new Transaction", new_user_group_operation_path(current_user, @group.id), class: "inline-block px-6 py-2.5 bg-blue-600 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-700 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out"  %> 
        <%= link_to 'Back', root_path, class: "text-center px-6 py-2.5 mb-6 w-1/3 bg-red-600 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-700 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out" %>

      </div>
    </div>
  </div>
  